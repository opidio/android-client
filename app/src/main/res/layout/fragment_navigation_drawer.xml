<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:background="#fff"
				android:layout_width="match_parent"
				android:layout_height="match_parent">

	<TextView
			android:layout_width="wrap_content"
			android:layout_marginTop="5dp"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="5dp"
			android:layout_marginBottom="5dp"
			android:layout_height="wrap_content"
			android:id="@+id/logged_in_as_label"
			android:text="Logged in as"/>

	<TextView
			android:layout_width="wrap_content"

			android:layout_height="wrap_content"
			android:id="@+id/logged_in_as"
			android:layout_marginTop="5dp"
			android:textColor="#ff4594ff"
			android:layout_toRightOf="@id/logged_in_as_label"
			android:layout_toEndOf="@id/logged_in_as_label"
			android:text="Placeholder"/>


	<ListView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:choiceMode="singleChoice"
			android:divider="@android:color/transparent"
			android:dividerHeight="0dp"
			android:layout_below="@+id/logged_in_as_label"
			android:id="@+id/drawer_list"
			tools:context="io.opid.NavigationDrawerFragment"/>


</RelativeLayout>